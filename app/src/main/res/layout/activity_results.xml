<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ResultsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/finish"
        android:textSize="@dimen/large_heading_text_size"
        android:textColor="@color/primary_text_color"
        android:textStyle="bold"
        android:padding="@dimen/primary_layout_padding"
        android:layout_margin="@dimen/primary_layout_margin"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Congratulations"
        android:textSize="@dimen/large_heading_text_size"
        android:padding="@dimen/primary_layout_padding"
        tools:text="Congratulations"/>

    <TextView
        android:id="@+id/tvNameResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/secondary_text_size"
        android:textStyle="bold"
        android:padding="@dimen/primary_layout_padding"
        tools:text="text"/>

    <TextView
        android:id="@+id/tvDisplayResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold"
        android:layout_margin="@dimen/primary_layout_margin"
        android:padding="@dimen/primary_layout_padding"
        tools:text="text"/>

</LinearLayout>